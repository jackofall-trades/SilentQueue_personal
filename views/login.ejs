<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Login</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script type="module" src="/js/pages/login.js"></script>
</head>
<body class="bg-green-50 min-h-screen flex items-center justify-center p-6">
  <div class="w-full max-w-md mx-auto"> 
  <!-- Login Page -->
    <form id="loginForm" onsubmit="return false;"> 
      <div class="bg-white rounded-xl shadow-lg p-6 mb-8">
        <h2 class="text-2xl font-semibold text-center text-green-700 mb-4">Login to Silent Queue</h2>
        <input type="email" id="email" placeholder="Email" class="w-full mb-3 px-4 py-2 border rounded focus:ring-2 focus:ring-green-300" required />
        <input type="password" id="password" placeholder="Password" class="w-full mb-4 px-4 py-2 border rounded focus:ring-2 focus:ring-green-300" required />
        <select id="role" class="w-full mb-3 px-4 py-2 border rounded focus:ring-2 focus:ring-green-300" required>
          <option value="" disabled selected>Select Role</option>
          <option value="patient">Patient</option>
          <option value="doctor">Doctor</option>
          <option value="staff">Staff</option>
        </select>
        <button type="submit" id="enter" class="w-full bg-green-600 text-white py-2 rounded hover:bg-green-700">Enter</button>
  
        <p class="text-center text-sm mt-4">New user? <a href="/signup" class="text-green-600 underline">Sign up</a></p>
      </div>
    </form>
  </div>
</body>
</html>