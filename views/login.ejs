<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Silent Queue App</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-green-50 min-h-screen flex items-center justify-center p-6">
  <div class="w-full max-w-md mx-auto"> 
  <!-- Login Page -->
    <form > 
      <div class="bg-white rounded-xl shadow-lg p-6 mb-8">
        <h2 class="text-2xl font-semibold text-center text-green-700 mb-4">Login to Silent Queue</h2>
        <input type="email" placeholder="Email" class="w-full mb-3 px-4 py-2 border rounded focus:ring-2 focus:ring-green-300" />
        <input type="password" placeholder="Password" class="w-full mb-4 px-4 py-2 border rounded focus:ring-2 focus:ring-green-300" />
        <select id="role" class="w-full mb-3 px-4 py-2 border rounded focus:ring-2 focus:ring-green-300">
          <option disabled selected>Select Role</option>
          <option value="patient">Patient</option>
          <option value="doctor">Doctor</option>
          <option value="staff">Staff</option>
        </select>
        <button id="enter" class="w-full bg-green-600 text-white py-2 rounded hover:bg-green-700">Enter</button>
  
        <p class="text-center text-sm mt-4">New user? <a onclick="window.location.href='./view/Sign_Up.ejs'" class="text-green-600 underline">Sign up</a></p>
      </div>
    </form>
    
    </div>
    <script>
      document.getElementById("enter").addEventListener("click", function () {
        const role = document.getElementById("role").value;
    
        if (role === "doctor" || role === "staff") {
          window.location.href = "queueOverview.ejs";
        } else if (role === "patient") {
          window.location.href = "joinQueue.ejs";
        } else {
          alert("Please select a valid role.");
        }
      });
    </script>
</body>